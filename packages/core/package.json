{
  "name": "@niama/core",
  "version": "4.10.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "license": "MIT",
  "prettier": "@niama/config-prettier",
  "files": [
    "dist/**"
