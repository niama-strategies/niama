  "dependencies": {
    "type-fest": "^3.2.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@niama/config-prettier": "workspace:*",
    "@niama/config-typescript": "workspace:*",
    "eslint-config-niama": "workspace:*",
    "tsup": "^6.5.0"
  }
}
